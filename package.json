{
	"name": "@ruan-cat-monorepo/root",
	"private": true,
	"version": "1.0.0",
	"author": "ruan-cat",
	"license": "ISC",
	"description": "这是单仓架构项目的根目录。",
	"main": "index.js",
	"type": "module",
	"packageManager": "pnpm@9.5.0",
	"engines": {
		"node": ">=20.15.1",
		"vscode": "^1.22.0",
		"pnpm": ">=9.5.0"
	},
	"scripts": {
		"build": "turbo build",
		"on-github-action-flow": "pnpm run build && pnpm run build:docs",
		"changeset:add": "changeset add",
		"changeset:version": "changeset version && changeset tag",
		"git:push": "git push --follow-tags",
		"build:docs": "turbo build:docs",
		"clear": "node --import=tsx ./scripts/clean.ts",
		"git:dev-2-main": "git rebase dev main && pnpm run git:push",
		"git:main-2-dev": "git rebase main dev",
		"test": "vitest --ui --watch --api.port=4000",
		"format": "prettier --write . --ignore-path ./.config/.prettierignore --ignore-path .gitignore",
		"update-package": "pnpm dlx vp-update",
		"create-code-workspace:": "node --import=tsx ./scripts/generate.code-workspace.ts",
		"deploy-vercel": "node --import=tsx ./scripts/vercel-deploy-tool.ts",
		"automd": "automd",
		"preinstall": "npx only-allow pnpm && npm run corepack:pnpm",
		"corepack:pnpm": "corepack enable && corepack install",
		"commit": "git-cz",
		"git:fetch": "git fetch -p",
		"clear-2": "pnpm run clear:deps && pnpm run clear:cache",
		"clear:deps": "rimraf -g **/{node_modules,package-lock.json,pnpm-lock.yaml}",
		"clear:cache": "rimraf -g **/{dist,.turbo,.vercel,.cache,.temp}",
		"turbo:update-packages": "pnpm update-package && turbo vp-update",
		"npm:login": "pnpm login --registry=https://registry.npmjs.org/",
		"changeset:init": "changeset init",
		"changeset:publish": "changeset publish",
		"turbo:publish": "turbo do-publish",
		"codess:init": "codess init",
		"codess:build": "codess build"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^4.3.0",
		"@changesets/cli": "^2.28.1",
		"@ruan-cat/commitlint-config": "workspace:^",
		"@ruan-cat/domains": "workspace:^",
		"@ruan-cat/generate-code-workspace": "workspace:^",
		"@ruan-cat/utils": "workspace:^",
		"@ruan-cat/vercel-deploy-tool": "workspace:^",
		"@ruan-cat/vitepress-preset-config": "workspace:^",
		"@ruan-cat/vuepress-preset-config": "workspace:^",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/js-yaml": "^4.0.9",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.13.8",
		"@vitest/ui": "^3.0.7",
		"@vuepress/bundler-vite": "2.0.0-rc.20",
		"@vuepress/plugin-slimsearch": "2.0.0-rc.80",
		"automd": "^0.4.0",
		"codess": "^1.1.10",
		"commander": "^13.1.0",
		"commitizen": "^4.3.1",
		"consola": "^3.4.0",
		"cross-env": "^7.0.3",
		"cz-git": "^1.11.0",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.2",
		"eslint-config-turbo": "^2.4.4",
		"eslint-plugin-prettier": "^5.2.3",
		"js-yaml": "^4.1.0",
		"lodash-es": "^4.17.21",
		"markdown-it": "^14.1.0",
		"pkg-types": "^2.0.1",
		"prettier": "^3.5.3",
		"prettier-plugin-lint-md": "^1.0.1",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.3",
		"turbo": "^2.4.4",
		"type-fest": "^4.36.0",
		"type-plus": "^7.6.2",
		"typescript": "^5.8.2",
		"typescript-lodash": "^0.2.2",
		"vercel": "^41.3.0",
		"vite": "^6.2.0",
		"vitepress-demo-plugin": "^1.3.1",
		"vitest": "^3.0.7",
		"vue": "^3.5.13",
		"vue-tsc": "^2.2.8",
		"vuepress": "2.0.0-rc.20",
		"vuepress-theme-hope": "2.0.0-rc.73"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.38.3"
	}
}