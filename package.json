{
	"name": "@ruan-cat-monorepo/root",
	"private": true,
	"version": "1.0.0",
	"author": "ruan-cat",
	"license": "ISC",
	"description": "这是单仓架构项目的根目录。",
	"main": "index.js",
	"type": "module",
	"packageManager": "pnpm@10.16.0",
	"engines": {
		"node": ">=22.14.0"
	},
	"scripts": {
		"git:fetch": "git fetch -p",
		"git:dev-2-main": "pnpm git:fetch && pnpm git:push && git rebase dev main && pnpm git:push",
		"git:main-2-dev": "git rebase main dev && pnpm git:push",
		"changeset:add": "changeset add",
		"up-taze": "npx taze -r",
		"format": "prettier --experimental-cli --write '**/*.{js,jsx,ts,tsx,mts,json,css,scss,md,yml,yaml,html}' '!**/snippets/**' --ignore-path ./.config/.prettierignore --ignore-path .gitignore",
		"build": "turbo build",
		"test": "vitest --ui --watch --api.port=4000",
		"build:docs": "turbo build:docs",
		"ci": "pnpm run build && pnpm run build:docs",
		"clear": "tsx ./scripts/clean.ts",
		"create-code-workspace": "tsx ./scripts/generate.code-workspace.ts",
		"deploy": "turbo deploy-vercel",
		"deploy-vercel": "tsx ./scripts/vercel-deploy-tool.ts",
		"automd": "automd",
		"automd:all": "pnpm -F=\"./(packages|configs-package|vite-plugins)/*\" exec -- automd",
		"preinstall": "npx only-allow pnpm && npm run corepack:pnpm",
		"corepack:pnpm": "corepack enable && corepack install",
		"postinstall": "pnpm run init-git-hooks",
		"init-git-hooks": "simple-git-hooks",
		"commit": "git-cz",
		"git:push": "git push --follow-tags",
		"clear:deps": "rimraf -g '**/{node_modules,package-lock.json,pnpm-lock.yaml}'",
		"clear:cache": "rimraf -g '**/{dist,.turbo,.vercel,.cache,.temp}'",
		"npm:login": "pnpm login --registry=https://registry.npmjs.org/",
		"changeset:init": "changeset init",
		"changeset:publish": "changeset publish",
		"changeset:version": "changeset version && changeset tag",
		"turbo:publish": "turbo do-publish",
		"release": "pnpm build && changeset publish",
		"version": "changeset version",
		"codess:init": "codess init",
		"codess:build": "codess build"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^4.19.0",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@prettier/plugin-oxc": "^0.0.4",
		"@ruan-cat/commitlint-config": "workspace:^",
		"@ruan-cat/domains": "workspace:^",
		"@ruan-cat/generate-code-workspace": "workspace:^",
		"@ruan-cat/release-toolkit": "workspace:^",
		"@ruan-cat/taze-config": "workspace:^",
		"@ruan-cat/utils": "workspace:^",
		"@ruan-cat/vercel-deploy-tool": "workspace:^",
		"@ruan-cat/vitepress-preset-config": "workspace:^",
		"@ruan-cat/vuepress-preset-config": "workspace:^",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/js-yaml": "^4.0.9",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.18.1",
		"@vitest/ui": "^3.2.4",
		"@vuepress/bundler-vite": "2.0.0-rc.20",
		"@vuepress/plugin-slimsearch": "2.0.0-rc.80",
		"automd": "^0.4.0",
		"codess": "^1.1.10",
		"commander": "^13.1.0",
		"commitizen": "^4.3.1",
		"consola": "^3.4.2",
		"cross-env": "^7.0.3",
		"cz-git": "^1.12.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-turbo": "^2.5.6",
		"eslint-plugin-prettier": "^5.5.4",
		"js-yaml": "^4.1.0",
		"lint-staged": "^16.1.6",
		"lodash-es": "^4.17.21",
		"markdown-it": "^14.1.0",
		"pkg-types": "^2.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-lint-md": "^1.0.1",
		"rimraf": "^6.0.1",
		"simple-git-hooks": "^2.13.1",
		"taze": "^19.6.0",
		"tsx": "^4.20.5",
		"turbo": "^2.5.6",
		"type-fest": "^4.41.0",
		"type-plus": "^7.6.2",
		"typescript": "^5.9.2",
		"typescript-lodash": "^0.2.2",
		"vercel": "^41.7.8",
		"vite": "^6.3.5",
		"vitepress-demo-plugin": "^1.4.7",
		"vitest": "^3.2.4",
		"vue": "^3.5.21",
		"vue-tsc": "^2.2.12",
		"vuepress": "2.0.0-rc.20",
		"vuepress-theme-hope": "2.0.0-rc.73"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.49.0"
	}
}
