{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"cache": true,
			"outputs": ["**/dist/**", "**/.output/**"],
			"dependsOn": ["^build"]
		},
		"build:docs": {
			"cache": false,
			"outputs": ["**/.vitepress/dist/**", "**/.vuepress/dist/**"],
			"dependsOn": ["^build"]
		},
		"//#deploy-vercel": {
			"cache": false,
			"dependsOn": ["^build:docs"]
		},
		"//#changeset:publish": {
			"cache": false,
			"dependsOn": ["^build"]
		},
		"//#do-publish": {
			"dependsOn": ["//#changeset:publish"]
		}
	}
}
