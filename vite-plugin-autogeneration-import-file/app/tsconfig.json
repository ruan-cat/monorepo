{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"components/*": [
				"src/components/*"
			],
			"types/*": [
				"src/types/*"
			],
			"views/*": [
				"src/views/*"
			],
			"api/*": [
				"src/apis/*"
			],
			"stores/*": [
				"src/stores/*"
			],
			"routers/*": [
				"src/routers/*"
			],
			"utils/*": [
				"src/utils/*"
			],
			"tools/*": [
				"src/tools/*"
			],
			"models/*": [
				"src/models/*"
			],
		},
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.md",
		"./types"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	],
	/**
		让volar对md提供基础的类型支持
		- https://vitepress.dev/guide/using-vue#vs-code-intellisense-support
	*/
	"vueCompilerOptions": {
		"vitePressExtensions": [
			".md"
		],
	},
}