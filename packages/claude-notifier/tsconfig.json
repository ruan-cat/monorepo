{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"]
}
