{
	"name": "@ruan-cat/claude-notifier",
	"version": "0.1.0",
	"description": "在 Claude Code 任务完成后，发送 Windows 系统的全局通知。",
	"type": "module",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.cts",
	"homepage": "https://github.com/ruan-cat/monorepo/tree/dev/packages/claude-notifier",
	"bugs": {
		"url": "https://github.com/ruan-cat/monorepo/issues"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"pack": "pnpm pack",
		"test:cli:prod": "node dist/cli.cjs --help",
		"test:cli:task-complete:alice-icon:prod": "node dist/cli.cjs task-complete -s manbo -i alice/timeout.gif",
		"test:cli:task-complete": "tsx src/cli.ts task-complete -s manbo -i success --message=任务完成",
		"test:cli:task-complete:alice-icon": "tsx src/cli.ts task-complete -s manbo -i alice/timeout.gif",
		"test:cli:error": "tsx src/cli.ts error -i error",
		"test:cli:timeout": "tsx src/cli.ts timeout -i info",
		"test:cli:task-complete:help": "tsx src/cli.ts task-complete -h"
	},
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.cts"
		},
		"./src/*": "./src/*"
	},
	"keywords": [
		"claude code",
		"notifier",
		"global notification"
	],
	"author": {
		"name": "ruan-cat",
		"email": "1219043956@qq.com",
		"url": "https://github.com/ruan-cat"
	},
	"license": "MIT",
	"bin": {
		"@ruan-cat/claude-notifier": "./dist/cli.cjs"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/",
		"tag": "beta"
	},
	"files": [
		"!**/.vercel/**",
		"src",
		"templates/**",
		"dist/*",
		"!src/tests",
		"!src/**/tests",
		"!src/**/*.md",
		"tsconfig.json"
	],
	"dependencies": {
		"commander": "^13.1.0",
		"consola": "^3.4.2",
		"node-notifier": "^10.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.0",
		"@types/node-notifier": "^8.0.5",
		"tsup": "^8.5.0",
		"typescript": "^5.3.3"
	}
}
