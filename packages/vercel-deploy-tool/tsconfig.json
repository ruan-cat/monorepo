{
	"extends": "../../tsconfig.base.json",
	"references": [
		{
			"path": "../../tsconfig.md.json"
		}
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		// "rootDir": "./",
		// 不能这样配置 导致路径识别错乱
		// "rootDirs": [
		// 	"src",
		// 	"tests"
		// ],
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"src/*": [
				"src/*"
			],
			"tests/*": [
				"tests/*"
			]
		}
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.test.ts",
		"./tests/**/*.ts",
		// "src",
		// "tests"
	]
}