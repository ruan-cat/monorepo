{
	"compilerOptions": {
		"composite": true,
		// 项目的根目录
		"rootDir": ".",
		// 项目基础目录
		"baseUrl": ".",
		"declaration": true,
		// "allowImportingTsExtensions": true,
		// "noEmit": true,
		// tsc 编译产物输出目录
		"outDir": "dist",
		"checkJs": true,
		// 项目包含了js
		// "allowJs": true,
		"module": "ESNext",
		"target": "ESNext",
		// 模块解析策略
		"moduleResolution": "bundler",
		"allowJs": true,
		// 严格模式类型检查，建议开启
		"strict": true,
		// 允许引入 .json 模块
		"resolveJsonModule": true,
		// 检查类型时是否跳过类型声明文件，一般在上游依赖存在类型问题时置为 true。
		"skipLibCheck": true,
		// 需要使用 ThisType 工具
		"noImplicitThis": true,
		"types": ["typedoc", "typedoc-plugin-markdown", "node"],
		"paths": {
			"@ruan-cat/utils/*": ["./src/*"]
		}
	},
	"include": [
		"./src/**/*.ts"
		// "./src/**/*.js",
		// "./tests/**/*.ts",
		// "./tests/**/*.js",
	],
	"exclude": [
		// 测试用例的全部文件 交由本项目根目录下的 tsconfig.json 处理
		"src/tests/**/*.ts"
	]
}
